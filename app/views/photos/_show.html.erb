
<div class="row">
  <div class="col-xs-12">
    <div class="row">
      <h2 class="underline">
        <%= Category.find(photo_group.first).name %>
      </h2>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <br />
    <h3>
      <%= Category.find(photo_group.first).description %>
    </h3>
  </div>
</div>

<div class="row">
  <div id='<%= "myCarousel#{photo_group.first}" %>' class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <% photo_group.second.each_with_index do |photo, idx| %>
        <li data-target='<%= "#myCarousel#{photo_group.first}" %>' data-slide-to='<%= "#{idx + 1}" %>' class=' <%= "#{ if idx == 0 then 'active' else nil end }" %> '>
        </li>
      <% end %>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <% photo_group.second.each_with_index do |photo, idx| %>
        <%= render 'gallarypic', photo: photo, idx: idx %> 
      <% end %>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href='<%= "#myCarousel#{photo_group.first}" %>' role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href='<%= "#myCarousel#{photo_group.first}" %>' role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>