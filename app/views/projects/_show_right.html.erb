<div class="row project-show-row">
  <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
    <div class="project-show-panel">
      <div class="row">
        <!-- hidden img for modile -->
        <div class="col-xs-6 col-xs-offset-3 hidden-sm hidden-md hidden-lg">
          <% unless project.avatar_url.nil? %>
            <%= image_tag project.avatar_url(:project), class: 'project-img' %>
          <% end %>
        </div>

        <!-- description -->
        <div class="col-xs-12 col-sm-8 col-sm-offset-0 col-md-8 col-lg-7 text-right">
          <!-- title -->
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center-xs">
              <h2>
                <%= project.title %>
              </h2>
            </div>
          </div>
          <!-- sub title -->
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center-xs">
              <h3>
                <%= project.sub_title %>
              </h3>
            </div>
          </div>
          <!-- buy eventbrite tix -->
          <div class="row">
            <div class="col-xs-10 col-xs-offset-1 col-sm-12 col-sm-offset-0 col-md-12 col-lg-12 text-center-xs">
              <p class="inline">
                <% unless project.eventbrite_link.blank? %>
                  <%= link_to "Purchase Tickets", project.eventbrite_link, class: 'blue-link', :target => "_blank" %>
                <% end %>
              </p>
            </div>
          </div>
          <!-- description -->
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center-xs">
              <p>
                <%= simple_format project.description.gsub(/\n/, '<br>') %>
              </p>
            </div>
          </div>
          <!-- give button -->
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center-xs">
              <p>
                <%#= project.cost %>
              </p>
            </div>
          </div>
        </div>

        <!-- img for tablet + -->
        <div class="hidden-xs col-sm-4 col-md-4 col-lg-5">
          <% unless project.avatar_url.nil? %>
            <%= image_tag project.avatar_url(:project), class: 'project-img' %>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>