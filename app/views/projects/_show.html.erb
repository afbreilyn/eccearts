<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-12 col-sm-offset-0 col-md-12 col-lg-12">
    <div>
      <div class="row">
        <div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-0 col-md-3 col-md-offset-1 col-lg-3 col-lg-offset-1">
          <% unless project.avatar_url.nil? %>
            <%= image_tag project.avatar_url, class: '', style: 'width: 100%' %>
          <% end %>
        </div>
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-md-7 col-lg-7">
          <%= project.title %>
        </div>
      </div>
    </div>
  </div>
</div>